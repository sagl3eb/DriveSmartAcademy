@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Drive Smart Academy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/student/student.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="dashboard-wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <a asp-controller="Home" asp-action="Index" class="logo">DriveSmartAcademy</a>
                <button id="sidebarCollapseBtn" class="d-md-none">
                    <i class="bi bi-list"></i>
                </button>
            </div>

            <ul class="sidebar-menu">
                <li>
                    <a asp-controller="Student" asp-action="Dashboard" class="sidebar-link @(ViewContext.RouteData.Values["Action"].ToString() == "Dashboard" ? "active" : "")">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="Student" asp-action="ViewCourses" class="sidebar-link @(ViewContext.RouteData.Values["Action"].ToString() == "ViewCourses" ? "active" : "")">
                        <i class="bi bi-book"></i>
                        <span>My Courses</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="Student" asp-action="TrackProgress" class="sidebar-link @(ViewContext.RouteData.Values["Action"].ToString() == "TrackProgress" ? "active" : "")">
                        <i class="bi bi-graph-up"></i>
                        <span>Track Progress</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="Student" asp-action="ViewQuizResults" class="sidebar-link @(ViewContext.RouteData.Values["Action"].ToString() == "ViewQuizResults" ? "active" : "")">
                        <i class="bi bi-card-checklist"></i>
                        <span>Quiz Results</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="Student" asp-action="TakeDrivingTheoryExam" class="sidebar-link @(ViewContext.RouteData.Values["Action"].ToString() == "TakeDrivingTheoryExam" ? "active" : "")">
                        <i class="bi bi-file-earmark-text"></i>
                        <span>Theory Exams</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="Student" asp-action="GiveFeedback" class="sidebar-link @(ViewContext.RouteData.Values["Action"].ToString() == "GiveFeedback" ? "active" : "")">
                        <i class="bi bi-chat-right-text"></i>
                        <span>Give Feedback</span>
                    </a>
                </li>
            </ul>

            <div class="sidebar-footer">
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="logout-btn">
                        <i class="bi bi-box-arrow-right"></i>
                        <span>Logout</span>
                    </button>
                </form>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Top Navbar -->
            <nav class="navbar top-navbar">
                <div class="container-fluid">
                    <button id="sidebarCollapse" class="navbar-toggler d-md-none">
                        <i class="bi bi-list"></i>
                    </button>

                    <div class="d-flex align-items-center ms-auto">
                        <div class="dropdown">
                            <a href="#" class="dropdown-toggle user-dropdown" id="userDropdown" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-2"></i>
                                <span class="d-none d-sm-inline">@User.Identity?.Name</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#">Profile</a></li>
                                <li><a class="dropdown-item" href="#">Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item">Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Page Content -->
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/student.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(document).ready(function () {
            $('#sidebarCollapse, #sidebarCollapseBtn').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>
</body>
</html>