@* Hero Section *@
<section class="hero-section" id="hero">
    <div class="hero-background">
        <div class="animated-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
        </div>
    </div>
    <div class="container position-relative">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <span class="hero-subtitle">Your Online Driving Instructor</span>
                <h1 class="hero-title gradient-text">Drive Smart Academy</h1>
                <p class="hero-text">Master the future of driving education with our cutting-edge virtual learning platform.</p>
                <div class="hero-cta">
                    <button class="btn-glow" onclick="window.location.href='@Url.Action("Register", "Account")'">Start Learning</button>
                    <button class="btn-outline">Watch Demo</button>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image-wrapper">
                    <img src="~/imgs/hero-background.png" alt="Modern Car" class="hero-image" />
                    <div class="floating-card glass-card">
                        <div class="card-icon">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <p>Advanced Safety Features</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@* About Section *@
