<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Drive Smart Academy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DriveSmartAcademy.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <h3>Drive Smart Academy</h3>
            </div>

            <ul class="list-unstyled components">
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Dashboard" ? "active" : "")">
                    <a asp-controller="Student" asp-action="Dashboard">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "MyCourses" ? "active" : "")">
                    <a asp-controller="Student" asp-action="MyCourses">
                        <i class="bi bi-book"></i> My Courses
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "ViewCourses" ? "active" : "")">
                    <a asp-controller="Student" asp-action="ViewCourses">
                        <i class="bi bi-collection"></i> Browse Courses
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "TrackProgress" ? "active" : "")">
                    <a asp-controller="Student" asp-action="TrackProgress">
                        <i class="bi bi-graph-up"></i> Track Progress
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "ViewQuizResults" ? "active" : "")">
                    <a asp-controller="Student" asp-action="ViewQuizResults">
                        <i class="bi bi-check2-circle"></i> Quiz Results
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "TakeDrivingTheoryExam" ? "active" : "")">
                    <a asp-controller="Student" asp-action="TakeDrivingTheoryExam">
                        <i class="bi bi-file-earmark-text"></i> Theory Exams
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "GiveFeedback" ? "active" : "")">
                    <a asp-controller="Student" asp-action="GiveFeedback">
                        <i class="bi bi-chat-dots"></i> Give Feedback
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>
</body>
</html> 