<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DriveSmartAcademy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg pb-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">DriveSmartAcademy</a>

                @{
                    bool isAuthPage =
                    Context.Request.Path.StartsWithSegments("/Account/Login") ||
                    Context.Request.Path.StartsWithSegments("/Admin") ||
                    Context.Request.Path.StartsWithSegments("/Account/Register");
                }

                @if (!isAuthPage)
                {
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"><i class="bi bi-list"></i></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav m-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Index" asp-fragment="hero">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Index" asp-fragment="about">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Index" asp-fragment="courses">Courses</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Index" asp-fragment="reviews">Reviews</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Index" asp-fragment="faq">FAQS</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Index" asp-fragment="contact">Contact</a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                }
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    @await RenderSectionAsync("Scripts", required: false)

    @* page content *@
    <div class="content"">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    @* footer *@

    @if(!isAuthPage){
        <footer class="footer mt-auto">
            <div class="container">
                <div class="row">
                    <!-- Company Info -->
                    <div class="col-md-4 mb-4">
                        <h5>Drive Smart Academy</h5>
                        <p>Your trusted partner in driving education. We provide comprehensive training to make you a confident and safe driver.</p>
                        <div class="social-links">
                            <a href="#" class="me-3"><i class="bi bi-facebook"></i></a>
                            <a href="#" class="me-3"><i class="bi bi-twitter"></i></a>
                            <a href="#" class="me-3"><i class="bi bi-instagram"></i></a>
                            <a href="#"><i class="bi bi-linkedin"></i></a>
                        </div>
                    </div>

                    <!-- Quick Links -->
                    <div class="col-md-4 mb-4">
                        <h5>Quick Links</h5>
                        <ul class="list-unstyled">
                            <ul class="list-unstyled">
                                <li><a asp-page="/Index" asp-fragment="hero"></a></li>
                                <li><a asp-page="/Index" asp-fragment="hero">Home</a></li>
                                <li><a asp-page="/Index" asp-fragment="about">About Us</a></li>
                                <li><a asp-page="/Index" asp-fragment="courses">Courses</a></li>
                                <li><a asp-page="/Index" asp-fragment="reviews">Reviews</a></li>
                                <li><a asp-page="/Index" asp-fragment="faq">FAQ</a></li>
                                <li><a asp-page="/Index" asp-fragment="contact">Contact</a></li>
                            </ul>
                        </ul>
                    </div>

                    <!-- Contact Info -->
                    <div class="col-md-4 mb-4">
                        <h5>Contact Us</h5>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-geo-alt-fill me-2"></i>123 Jln OS, Serdang, Seri Kembangan, Kuala Lumpur, Malaysia</li>
                            <li><i class="bi bi-telephone-fill me-2"></i>+60 178701925</li>
                            <li><i class="bi bi-envelope-fill me-2"></i>info@drivesmartacademy.com</li>
                        </ul>
                    </div>
                </div>

                <!-- Copyright -->
                <div class="row mt-4">
                    <div class="col-12">
                        <hr>
                        <p class="text-center mb-0">
                            &copy; @DateTime.Now.Year Drive Smart Academy. All rights reserved.
                        </p>
                    </div>
                </div>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>