@model DriveSmartAcademy.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}

<div class="login-container">
    <div class="container">
        <div class="login-card card mt-5">
            <div class="card-header py-4">
                <h2 class="text-center mb-0">Welcome Back</h2>
            </div>
            <div class="card-body p-4">
                <form class="login-form" asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-4">
                        <label asp-for="Email" class="control-label mb-2"></label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Password" class="control-label mb-2"></label>
                        <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="login-btn btn btn-primary">Login</button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <p class="mb-0 text-dark">Don't have an account? <a class="login-link" asp-action="Register">Register here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}